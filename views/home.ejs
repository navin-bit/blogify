<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Home</title>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <section class="container m-4">
      <div
        class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex justify-content-center"
      >
        <% blogs.forEach(blog => { %>

        <div class="card m-2" style="width: 25rem">
          <img
            src="<%= blog.coverImageUrl %>"
            loading="lazy"
            class="w-100"
            alt="..."
          />

          <div class="card-body">
            <p class="card-title"><%= blog.title %></p>

            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
          </div>
        </div>

        <% }) %>
      </div>
    </section>
    <%- include("./about.ejs") %> <%- include("./partials/footer.ejs") %>
  </body>
</html>
